{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@Modules/*": ["Modules/*"],
      "@Errors/*": ["Errors/*"],
      "@Config/*": ["Config/*"],
      "@Shared/*": ["Shared/*"],
      "@Utils/*": ["Utils/*"],
      "@Validation": ["Validation/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "exclude": ["node_modules", "view"]
  }
}
